{
	"$description": "Tier 3: Chip Component Tokens. Defines sizes, spacing, and styles for pt-chip.",
	"chip": {
		"$description": "Chip component for compact information display. サイズ選択基準: レイアウト密度とコンポーネント整合性。同じ文脈では同じサイズを使用し、情報の重要度でサイズを変えない。",
		"padding": {
			"x": {
				"sm": {
					"value": "{space.10}",
					"type": "spacing",
					"$description": "Small時の内側余白 (4px)。"
				},
				"md": {
					"value": "{space.15}",
					"type": "spacing",
					"$description": "Medium時の内側余白 (6px)。"
				}
			}
		},
		"gap": {
			"value": "{spacing.gap.xs}",
			"type": "spacing",
			"$description": "アイコンとテキスト間の隙間。`gap`に適用。"
		},
		"font": {
			"size": {
				"sm": {
					"value": "{font.size.xs}",
					"type": "fontSize",
					"$description": "Small時のフォントサイズ (12px)。"
				},
				"md": {
					"value": "{font.size.sm}",
					"type": "fontSize",
					"$description": "Medium時のフォントサイズ (14px)。"
				}
			},
			"weight": {
				"value": "{font.weight.medium}",
				"type": "fontWeight",
				"$description": "チップのフォントウェイト。"
			}
		},
		"radius": {
			"none": {
				"value": "0",
				"type": "borderRadius",
				"$description": "角丸なし。"
			},
			"sm": {
				"value": "{semantic-border.radius.sm}",
				"type": "borderRadius",
				"$description": "小さい角丸。"
			},
			"md": {
				"value": "{semantic-border.radius.md}",
				"type": "borderRadius",
				"$description": "標準の角丸。"
			},
			"full": {
				"value": "9999px",
				"type": "borderRadius",
				"$description": "完全な丸み（ピル形状）。"
			}
		},
		"interaction": {
			"transition": {
				"value": "{motion.duration.quick}",
				"type": "duration",
				"$description": "インタラクション時のトランジション時間。"
			}
		}
	}
}