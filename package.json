{
  "name": "pokemon-type-chart-quiz",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "docs:serve": "ng serve docs",
    "docs:build": "ng build docs",
    "docs:build:ghpages": "ng build docs --base-href /pokemon-type-chart-quiz/",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky",
    "lint:css": "stylelint \"src/**/*.{css,scss}\" --ignore-pattern \"src/styles/generated/**\"",
    "dep-check": "depcruise src --config .dependency-cruiser.js",
    "unused-check": "knip",
    "fetch-data": "node scripts/fetch-pokemons.js",
    "validate-data": "tsx scripts/validate-data.ts",
    "tokens:build": "node style-dictionary.config.mjs && node scripts/generate-types-from-tokens.mjs && node scripts/sync-style-md-tokens.mjs",
    "prebuild": "npm run fetch-data && npm run validate-data",
    "guard:component-structure": "node guards/code-quality/rules/component-structure.rules.js",
    "guard:token-existence": "node guards/design/rules/token-existence.rules.js",
    "guard:component-standards": "node guards/code-quality/rules/component-standards.rules.js",
    "guard:component-base-styles": "node guards/design/rules/component-base-styles.rules.js",
    "guard:component-token-mapping": "node guards/design/rules/component-token-mapping.rules.js",
    "guard:space-token-10x": "node guards/design/rules/space-token-10x.rules.js",
    "lint:docs": "node guards/maintenance/rules/temp-docs.rules.js",
    "guards:validate": "node guards/meta/rules/guardrail-format.rules.js && node guards/design/rules/no-raw-tailwind.rules.js && node guards/code-quality/rules/component-structure.rules.js && node guards/design/rules/token-existence.rules.js && node guards/code-quality/rules/component-standards.rules.js && node guards/design/rules/component-base-styles.rules.js && node guards/design/rules/component-token-mapping.rules.js && node guards/design/rules/space-token-10x.rules.js && node guards/maintenance/rules/temp-docs.rules.js",
    "issue:validate": "node scripts/validate-issue-local.js",
    "issue:check": "node scripts/check-issue-warnings.js",
    "pr:validate": "node scripts/validate-pr-local.js"
  },
  "lint-staged": {
    "src/**/*.{css,scss}": [
      "npm run lint:css"
    ],
    "src/**/*.ts": [
      "eslint"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/animations": "^21.1.1",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@ng-doc/app": "21.0.0",
    "@ng-doc/builder": "21.0.0",
    "@ng-doc/core": "21.0.0",
    "@ng-doc/ui-kit": "21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin-template": "^21.2.0",
    "@angular-eslint/template-parser": "^21.2.0",
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@ng-doc/app": "^21.0.0",
    "@ng-doc/builder": "^21.0.0",
    "@ng-doc/core": "^21.0.0",
    "@ng-doc/ui-kit": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/angular": "^19.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "dependency-cruiser": "^17.3.7",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.3",
    "style-dictionary": "^5.2.0",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.8"
  }
}